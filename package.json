{
  "name": "yandex-music-track-info",
  "version": "1.0.0",
  "description": "Приложение для получения информации о треке на Яндекс.Музыке",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "pnsrc",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.7",
    "electron-store": "^8.1.0",
    "express": "^4.21.2",
    "expressjs": "^1.0.1",
    "node-fetch": "^2.7.0",
    "tmi.js": "^1.8.5"
  },
  "devDependencies": {
    "electron": "^27.3.11",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "me.pnsrc.yanusicbot",
    "productName": "YaMusicBot",
    "directories": {
      "output": "dist"
    },
    "files": [
      ".env",
      "main.js",
      "renderer.js",
      "index.html",
      "package.json",
      "node_modules"
    ],
    "win": {
      "target": "zip",
      "icon": "build/icon.ico"
    },
    "mac": {
      "category": "public.app-category.music"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
